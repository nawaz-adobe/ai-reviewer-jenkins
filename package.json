{
  "name": "ai-reviewer-jenkins",
  "version": "1.0.0",
  "description": "AI-powered code review for Jenkins using ai-reviewer-core",
  "main": "dist/jenkins-reviewer.js",
  "bin": {
    "ai-reviewer": "dist/jenkins-reviewer.js"
  },
  "scripts": {
    "build": "node scripts/build-team-package.js",
    "test": "jest",
    "test:unit": "jest __tests__/unit",
    "test:integration": "jest __tests__/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "JEST_VERBOSE=true jest --verbose",
    "update-core": "npm update ai-reviewer-core"
  },
  "dependencies": {
    "@octokit/auth-app": "^8.1.0",
    "@octokit/rest": "^22.0.0",
    "ai-reviewer-core": "^1.1.0",
    "commander": "^11.0.0",
    "dotenv": "^16.0.3"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.36.1",
    "jest": "^29.5.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "jenkins",
    "ai",
    "code-review",
    "llm",
    "openai",
    "ci-cd"
  ],
  "author": "Farhan Nawaz <nawaz@adobe.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/ai-reviewer-jenkins.git"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/__tests__/setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "testTimeout": 30000,
    "verbose": false,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(@octokit|ai-reviewer-core)/)"
    ],
    "moduleNameMapper": {
      "^@octokit/rest$": "<rootDir>/__tests__/mocks/@octokit/rest.js",
      "^ai-reviewer-core$": "<rootDir>/__tests__/mocks/ai-reviewer-core.js"
    }
  }
}
